{
    "manifest_version": 3,
    "name": "Steam Curator Unwrapper",
    "version": "1.1",
    "description": "Quick ignoring and wishlisting on steam curator page",
    "permissions": ["scripting"],
    "content_scripts": [
        {
            "matches": ["*://store.steampowered.com/curator/*"],
            "js": ["content.js"],
            "css": ["styles.css"],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
